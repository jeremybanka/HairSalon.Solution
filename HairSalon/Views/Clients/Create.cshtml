@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client
<header>
  <h1>New Client</h1>
</header>
<main>
  @using (Html.BeginForm())
  {
    <section>
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
    </section>
    <section>
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")
    </section>

    <input type="submit" value="Done" />
  }
  <p>@Html.ActionLink("Cancel", "Index")</p>
</main>
