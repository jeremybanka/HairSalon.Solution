<!-- prettier-ignore -->
@{
  Layout = "_Layout"; 
}
@using HairSalon.Models;
<!-- prettier-ignore-end -->
<header>
  <h1>Stylists</h1>
</header>
<main>
  @if (@Model.Count == 0)
  {
    <h3>No stylists have been added yet!</h3>
  }

  <ul>
    @foreach (Stylist s in Model)
    {
      <li>@Html.ActionLink($"{s.Name}", "Details", new { id = s.StylistId })</li>
    }
  </ul>

  <p>@Html.ActionLink("New Stylist", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</main>
